{
  "compilerOptions": {
    "target": "es2019",
    "module": "es6",
    "esModuleInterop": true,
    "charset": "utf8",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "swiper": ["types/swiper"],
      "swiper/js/swiper.esm": ["types/swiper/js/swiper.esm"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
  ],

}
